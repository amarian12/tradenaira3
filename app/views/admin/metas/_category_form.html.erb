 
<%= form_for(@cat, url: admin_create_category_path) do |f|  %>
		<%= hidden_field_tag :id, @cat.id %>
		<% if @cat.errors.any? %>
			<ul class="errors">
			    <% @cat.errors.full_messages.each do |message| %>
			      <li><%= message %></li>
			    <% end %>
			</ul>    
		<% end %>

	<div class="form-group string require">
		<label class="">Category Title</label>
		<%= f.text_field :title, class: "form-control string", placeholder: "Category title" %>
	</div>

	<div class="form-group select optional">
		<label class="">Sub Category</label>
		<%= f.select :parent_id, 
		MetaCategory.all.collect {|mc| [ mc.title, mc.id ] }, { include_blank: true } %>
	</div>

	<div class="form-group button optional">
		 
		<%= f.submit class: "form-control btn btn-success" %>
	</div>
<% end %>