<div class="row">
	<div class="col-md-12">
		<div class="msglink">
			<%= button_tag "Send message to all subscribers", 
			class: "btn btn-default", onclick: "$( '#senMsgModel' ).modal();" %>
		</div>
	</div>
</div>

<div id="senMsgModel" class="modal">

	<div class="modal-content">
		<div class="content">
			<div class="response-box">
				<div class="form_success"></div>
				<div class="form_erros"></div>
			</div>
			<div class="modal-header" style="border: none;">
				<span class="close" onclick="$('#senMsgModel').modal('hide');" >&times;</span>
			</div>
			<%= form_for(@subscriber, url: admin_send_msg_path,
			html: { onSubmit: "return senMsgToSubscr(this)"}) do |f| %>

				<div class="form-group">
					<label for="exampleInputEmail1">Message subject</label>
					<%= f.text_field :subject, class: "form-control" %>
				</div>

				<div class="form-group">
					<label for="exampleInputEmail1">Message Contents</label>
					<%= f.text_area :contents, class: "form-control", rows: 3 %>
				</div>

				<div class="form-check">
			    <%= f.check_box :active_only %>
			    <%= f.label :active_only, "Send to active subscribers only" %>
			     
			  	</div>

				<div class="form-group">
				<%= f.submit "Send", class: "btn btn-primary subssbscribe" %>
				</div>
			<% end %>
		</div>	
	</div>
</div>