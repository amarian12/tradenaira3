 <h1>Request Type: <%= @request_type %></h1>
 <table class="table">
 	<thead>
 		<tr>
 			<td>#</td>
 			<td>Date of Request</td>
 			<td>Sent By</td>
 			<td>Sent To</td>
 			<td>Requested Amount</td>
 			<td>Receipent Current Balance</td>
 			<td>Actions</td>
 		</tr>
 	</thead>
 	<tbody>
 		<% @me.each do |me| %>
	 		<tr>
	 			<td><%= me.id %></td>
	 			<td><%= me.created_at %></td>
	 			<td><%= me.sender.display_name || me.sender.email %></td>
	 			<td>
	 				<% if me.receiver.nil? %>
	 				<%= me.sent_on_email %>
	 				<% else %>
	 					<%= me.receiver.display_name || me.receiver.email %>
	 				<% end %>	
	 			</td>
	 			<td>
	 				<%= me.amount %><%= me.account.currency %>
	 			</td>
	 			<td>
	 				<% unless me.receiver.nil? %>
	 				<%#= me.receiver_account.balance %>
	 				<%#= me.receiver_account.currency %>
	 				<button class="btn btn-default">Approve</button>
	 				<button class="btn btn-default">Decline</button>
	 				<% else %>
	 					<span>Account yet to create</span>
	 				<% end %>
	 			</td>
	 			<td>
	 				
	 			</td>
	 			<td></td>
	 			<td></td>
	 			
	 		</tr>
 		<% end %>
 	</tbody>
 </table>
