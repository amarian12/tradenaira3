<%= form_for(@project,url: @url) do |f| %>
<div class="col-md-24">
	<div class="form-group">
		<% if @project.errors.any? %>
		<ul class="errors">
		    <% @project.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		    <% end %>
		</ul>    
		<% end %>
	</div>
	<div class="form-group">
		<%= f.label :title  %>
		<%= f.text_field :title, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :blurb  %>
		<%= f.text_field :blurb, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :image_url  %>
		<%= f.text_field :image_url, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :description  %> 
		<%= f.text_area :description, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :category  %> 
		<% categories = Category.all.map{|c| [c.name,c.id]} %>
		<%= f.select :categories, options_for_select(categories,@project.categories.pluck(:id)), {},{ multiple: true, class: "form-control", prompt: "Please Select" }  %>
	</div>


	<div class="form-group">
		<%= f.label :end_date  %>
		<%= f.text_field :end_date, placeholder: "Project Date: mm/dd/YYYY" ,  class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :funding_goal  %>
		<%= f.text_field :funding_goal, placeholder: "Project funding_goal" ,  class: "form-control" %>
	</div>

	<div class="form-group">
			<%= f.label :author  %>
			<%= f.text_field :author, placeholder: "Project author" ,  class: "form-control" %>
	</div>

	<div class="form-group">
			<%= f.label :total_amount  %>
			<%= f.text_field :total_amount, placeholder: "Project total_amount" ,  class: "form-control" %>
	</div>


	<%= f.submit  %>
</div>
<% end %>
