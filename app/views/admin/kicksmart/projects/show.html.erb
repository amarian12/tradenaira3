<div class="row">
	<div class="col-md-24">
		<div class="form-group">
			<div class="title">
				<label>
					Poject Title
				</label>
			</div>
			<div class="description">
				<%= @project.title %>
			</div>
		</div>
		<div class="form-group">
			<div class="title">
				<label>
					Poject blurb
				</label>
			</div>
			<div class="description">
				<%= @project.blurb %>
			</div>
		</div>
		<div class="form-group">
			<div class="title">
				<label>
					Poject description
				</label>
			</div>
			<div class="description">
				<%= @project.description %>
			</div>
		</div>
		<div class="form-group">
			<div class="title">
				<label>
					Poject image
				</label>
			</div>
			<div class="description">
				<%= image_tag @project.image_url unless @project.image_url.nil? %>
			</div>
		</div>

		<div class="form-group">
			<div class="title">
				<label>
					Poject end_date
				</label>
			</div>
			<div class="description">
				<%= @project.end_date   %>
			</div>
		</div>

		<div class="form-group">
			<div class="title">
				<label>
					Poject Categories
				</label>
			</div>
			<div class="description">
				<% @project.categories.each do |cate|   %>
				<%= link_to cate.name, edit_admin_kicksmart_category_path(@project) %><br>
				<% end %>
			</div>
		</div>

		<div class="form-group">
			<div class="title">
				<label>
					Poject funding_goal
				</label>
			</div>
			<div class="description">
				<%= @project.funding_goal   %>
			</div>
		</div>

		<div class="form-group">
			<div class="title">
				<label>
					Poject author
				</label>
			</div>
			<div class="description">
				<%= @project.author   %>
			</div>
		</div>

		<div class="form-group">
			<div class="title">
				<label>
					Poject total_amount
				</label>
			</div>
			<div class="description">
				<%= @project.total_amount   %>
			</div>
		</div>
		 

	</div>
</div>