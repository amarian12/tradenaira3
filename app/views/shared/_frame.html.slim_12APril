.col-xs-24.sign_in
  - if content_for?(:before)
    = yield(:before)
  .panel-default
    /*.panel-heading
      h2.panel-title = guide_panel_title*/
    .panel-body
      .row
        #guide.col-xs-24
          p.text-ignore = guide_intro
        #content.col-xs-24
          = render 'shared/flash'
          = yield
          - if content_for?(:guide)
    		= yield(:guide)
      - if content_for?(:secondary)
        = yield(:secondary)
  - if content_for?(:after)
    = yield(:after)
  