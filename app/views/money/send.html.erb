<%= metamagic title: "Send Money" %>
<% if @requests.present? %>
	<table class="table">
		<thead>
			<tr>
				<td>#</td>
				<td>Date</td>
				<td>Request from</td>
				<td>Amount</td>
				<td>Actions</td>
			</tr>
		</thead>
	<% @requests.each do |me| %>
		<tbody>
			<tr>
				<td><%= me.id %></td>
				<td><%= me.created_at %></td>
				<td><%= me.sender.email %></td>
				<td><%= me.amount %><%= me.account.currency %></td>
				<td>
					<%= link_to "Accept", two_factor_money_path(me.id, "accept"), 
					class: "btn btn-default" %>
					<%= link_to "Decline", two_factor_money_path(me.id,"decline"), 
					class: "btn btn-danger" %>
				</td>
			</tr>
		</tbody>
	<% end %>
	</table>
<% end %>
<div class="container">
    <div class="track_rate_wraper overflow-css">  
        <div class="display_img w50">
          <img src="/assets/img/bilgisayr.png" alt="screen1"> 
        </div>
        <div class="rate_content w50">
            <h3 class="heading4">SEND MONEY</h3>
            <p class="para1">Select the Currency to send money</p>
            <div class="rate_input">
                <%= render "shared/money/send_money_form" %>
            </div>

		</div>
	</div>
</div>
