      .assets
        span.title = t('.eur-assets-total')
        span.currency
          == t("currency.icon.eur")
          = @eur_proof.sum
      = render 'liability_data', account: @eur_account, proof: @eur_proof
      
    #gbp-proof.tab-pane:        .trade-wrapper
      .assets
        span.title = t('.gbp-assets-total')
        span.currency
          == t("currency.icon.gbp")
          = @gbp_proof.sum
      = render 'liability_data', account: @gbp_account, proof: @gbp_proof

    #btc-proof.tab-pane:        .trade-wrapper
