.tabbable
  ul.nav.nav-tabs
    li.active: a.ngn-proof href="#ngn-proof" data-toggle="tab" == t('.verify-ngn')
    li:        a.cny-proof href="#cny-proof" data-toggle="tab" == t('.verify-cny')
    li:        a.usd-proof href="#usd-proof" data-toggle="tab" == t('.verify-usd')
    li:        a.eur-proof href="#eur-proof" data-toggle="tab" == t('.verify-eur')
    li:        a.gbp-proof href="#gbp-proof" data-toggle="tab" == t('.verify-gbp')
    li:        a.btc-proof href="#btc-proof" data-toggle="tab" == t('.verify-btc')
    li:        a.btc-proof href="#ghs-proof" data-toggle="tab" == t('.verify-ghs')

  .tab-content

    #cny-proof.tab-pane:         .trade-wrapper
      .assets
        span.title = t('.cny-assets-total')
        span.currency
          == t("currency.icon.cny")
          = @cny_proof.sum
      = render 'liability_data', account: @cny_account, proof: @cny_proof
      
    #ngn-proof.tab-pane.active:   .trade-wrapper
      .assets
        span.title = t('.ngn-assets-total')
        span.currency
          == t("currency.icon.ngn")
          = @ngn_proof.sum
      = render 'liability_data', account: @ngn_account, proof: @ngn_proof
      
