<div class="spce_top">
<h1 class="admin-header"><%= t('blogo.admin.posts') %></h1>

<div class="row">
  <div class="col-md-18 left_table_box">
    <table class="pure-table pure-table-striped">
      <thead>
        <tr>
          <th><%= t('blogo.admin.title') %></th>
          <th><%= t('blogo.admin.status') %></th>
          <th><%= t('blogo.admin.author') %></th>
          <th><%= t('blogo.admin.published_on') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <%= render partial: 'post_li', locals: {post: post} %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6 right_img_box">
    <%= render partial: '/blogo/admin/sidebar' %>
  </div>
     
 </div>
      
 </div>
